    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.rainbow.spanishbolomain.ui.home.CourseFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_course" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.rainbow.spanishbolomain.ui.dashboard.MyCourseFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_mycourse" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.rainbow.spanishbolomain.ui.notifications.WishlistFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_wishlist" />
    <fragment
        android:id="@+id/navigation_account"
